<resources>
    <!-- Base application theme. -->
    <style name="Theme.ApiVideo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_orange</item>
        <item name="colorPrimaryVariant">@color/primary_orange</item>
        <item name="colorOnPrimary">@color/light_blue</item>
        <item name="colorAccent">@color/primary_orange</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.ApiVideo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ApiVideo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ApiVideo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>